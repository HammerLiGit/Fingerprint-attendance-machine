        <Button x:ConnectionId='4' x:Name="button1" Content="Up" HorizontalAlignment="Left" Height="34" Margin="80,139,0,0" VerticalAlignment="Top" Width="159"                      />
        <Button x:ConnectionId='5' x:Name="button2" Content="Down" HorizontalAlignment="Left" Height="34" Margin="244,139,0,0" VerticalAlignment="Top" Width="159"                      />
